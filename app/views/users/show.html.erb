<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <%= render 'counts', today_book: @today_book, yesterday_book: @yesterday_book, the_day_before: @the_day_before, this_week_book: @this_week_book, last_week_book: @last_week_book, the_week_before: @the_week_before %>
      <h2>7日分の投稿数</h2>
      <%= render 'chart', books: @books, yesterday_book: @yesterday_book, today_book: @today_book %>

      

      <div class="search_result">
        <%= render 'searches_form/search' %>
      </div>
    </div>
  </div>
</div>
