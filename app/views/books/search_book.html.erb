<table class="table table-hover table-inverse">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th>Tag</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to book.category, search_book_path(keyword: book.category) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
